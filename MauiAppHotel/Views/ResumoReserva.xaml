<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotel.Views.ResumoReserva"
             Title="Resumo da Reserva"
             BackgroundColor="#1A1A1A">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <Label Text="Resumo da Reserva"
                   FontFamily="Kalam"
                   FontSize="30"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="#FFD84D" />

            <Label x:Name="lbl_quarto" TextColor="White" FontSize="18"/>
            <Label x:Name="lbl_adultos" TextColor="White" FontSize="18"/>
            <Label x:Name="lbl_criancas" TextColor="White" FontSize="18"/>
            <Label x:Name="lbl_total" TextColor="#FFD84D" FontSize="20" FontAttributes="Bold"/>

            <Button Text="Finalizar Reserva"
                    FontSize="18"
                    BackgroundColor="#FFD84D"
                    TextColor="Black"
                    CornerRadius="25"
                    HeightRequest="55"
                    Clicked="OnFinalizarClicked" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
